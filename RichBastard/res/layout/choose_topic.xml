<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#4385f5">

    
     <ImageView
        android:id="@+id/logo_view"
        android:src="@drawable/logo_view"
        android:layout_width="300dp"
        android:layout_height="66dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:clickable="false" />
     
     
     <ibiapi.fontpackage.MyTextViewFont
	    style="@style/button"
	        android:id="@+id/chooseTopicTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="60dp"
	        android:text="Choose a topic"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:layout_centerHorizontal="true"
	 	    android:layout_below="@+id/logo_view"
	 	    android:background="#4385f5"
	        android:textColor="#fff"/>
     
     
     <LinearLayout
        android:id="@+id/chooseTopicLayout" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/chooseTopicTextView"
	    android:orientation="horizontal" >
	     
	     <Button
	         android:id="@+id/leftArrow"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="10dp"
	         android:layout_marginTop="30dp"
	         android:layout_weight="1"
	         android:background="@drawable/arrow_left" />
	     
	    <ibiapi.fontpackage.MyTextViewFont
	        android:id="@+id/topicTextView"
	        style="@style/button"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="30dp"
	        android:background="@drawable/white_container"
	        android:gravity="center"
	        android:text="Geography"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="#000"
	        android:textSize="25sp" />
	    
	    <Button
	        android:id="@+id/rightArrow"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="30dp"
	        android:layout_weight="1"
	        android:background="@drawable/arrow_right" />
    
    </LinearLayout>
    
     <ibiapi.fontpackage.MyButtonFont
	    style="@style/button"
	    android:id="@+id/playThematicGameButton"
	    android:layout_width="220dp"
	    android:layout_height="50dp"
        android:layout_centerHorizontal="true"
	    android:layout_below="@+id/chooseTopicLayout"
	    android:layout_marginTop="40dp"
	    android:background="@drawable/menu_button"
	    android:text="@string/playThematicGame"
	    android:textColor="#000"
	    android:textSize="25sp" />
    
    <!-- <ListView
        android:id="@+id/topicslistView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chooseTopicTextView"
        android:layout_centerHorizontal="true"
        
        android:layout_marginTop="50dp" >
    </ListView>  -->


</RelativeLayout>