<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/classicGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="97dp"
        android:text="Classic game" />

    <Button
        android:id="@+id/thematicalGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/classicGameButton"
        android:layout_below="@+id/classicGameButton"
        android:layout_marginTop="43dp"
        android:text="Thematical game" />

    <Button
        android:id="@+id/blitzGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/thematicalGameButton"
        android:layout_below="@+id/thematicalGameButton"
        android:layout_marginTop="45dp"
        android:text="Blitz game" />

</RelativeLayout>
